pipeline {
    agent {
        dockerfile {
            filename 'docker/dockerfile-java'
            additionalBuildArgs '--build-arg JENKINS_USER_ID=`id -u jenkins` --build-arg JENKINS_GROUP_ID=`id -g jenkins`'
        }
    }

    environment {
        TESTSERVER_TOMCAT_ENDPOINT=credentials('testserver-tomcat8-url')
        TESTSERVER_TOMCAT_CREDENTIALS=credentials('testserver-tomcat8-credentials')

        READER2_HIKARI_CONFIG = credentials('bdp-core-test-reader2-hikari.properties')
        READER2_DATABASE_CONFIG = credentials('bdp-core-test-reader2-database.properties')
    }

    stages {
        stage('Configure') {
            steps {
                sh 'sed -i -e "s/<\\/settings>$//g\" ~/.m2/settings.xml'
                sh 'echo "    <servers>" >> ~/.m2/settings.xml'
                sh 'echo "        ${TESTSERVER_TOMCAT_CREDENTIALS}" >> ~/.m2/settings.xml'
                sh 'echo "    </servers>" >> ~/.m2/settings.xml'
                sh 'echo "</settings>" >> ~/.m2/settings.xml'

                sh 'sed -i -e "s%\\(logging.level.root\\s*=\\).*\\$%\\1DEBUG,R%" reader2/src/main/resources/application.properties'

                sh 'cat "${READER2_HIKARI_CONFIG}" > reader2/src/main/resources/hikari.properties'
                sh 'cat "${READER2_DATABASE_CONFIG}" > reader2/src/main/resources/database.properties'
            }
        }
        stage('Build - Reader v2') {
            steps {
                sh 'cd reader2 && mvn -B -U clean test package'
            }
        }
        stage('Deploy - Reader v2') {
            steps {
                sh 'cd reader2 && mvn -B -U tomcat:redeploy -Dmaven.tomcat.url=${TESTSERVER_TOMCAT_ENDPOINT} -Dmaven.tomcat.server=testServer'
            }
        }
    }
}
